<p><h2>Edit multiple</h2></p>

<%= form_tag update_individual_players_path, method: :put do %>
	<table>
		<thead>
			<tr>
				<th>Rank</th>
				<th>Name</th>
				<th>Team</th>
				<th>Position</th>
				<th>Power play</th>
				<th>Games</th>
				<th>Points</th>
				<th>Goals</th>
				<th>Assists</th>
				<th>Salary</th>
				<th>Last PP</th>
				<th>Color</th>
				<th>Drafted</th>
				<th></th>
			</tr>
		</thead>
		
		<tbody>
			<% @players.each do |player| %>
				<%= fields_for "players[]", player do |f| %>
					<%= render "fields", :f => f %>
				<% end %>
			<% end %>
		</tbody>
	</table>
	<p><%= submit_tag "Submit" %></p>
<% end %>		